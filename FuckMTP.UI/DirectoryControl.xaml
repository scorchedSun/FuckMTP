<UserControl x:Class="FuckMTP.UI.DirectoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FuckMTP.UI"
             mc:Ignorable="d" 
             Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="Directory.ico" Width="64" Height="64"/>
        <TextBlock x:Name="tbName" Grid.Row="1" FontSize="10" TextAlignment="Center"/>
    </Grid>
</UserControl>
